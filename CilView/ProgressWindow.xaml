<Window x:Class="CilView.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Operation progress" Height="200" Width="350" Loaded="Window_Loaded_1">
    <Grid>
        <ProgressBar x:Name="progress" HorizontalAlignment="Stretch" Height="35" Margin="15,15,15,15" 
                     VerticalAlignment="Top" />
        <TextBlock x:Name="textblock" HorizontalAlignment="Stretch"  Margin="15,60,15,50" 
                   TextWrapping="Wrap" Text="Please wait..." VerticalAlignment="Stretch" />
        <Button x:Name="bCancel" Content="Cancel" HorizontalAlignment="Right" Height="27" Margin="15,15,15,15" 
                VerticalAlignment="Bottom" Width="111" Click="bCancel_Click"/>

    </Grid>
</Window>
